<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-grid.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/font_/css/font-awesome.min.css">

    <script src="~/Scripts/modernizr-2.6.2.js"></script>

</head>
<body>
    <div class="navbar navbar-expand-sm navbar-light  fixed-top bg-white">
        <a href="#menu-toggle" id="menu-toggle" class="navbar-brand"><span class="navbar-toggler-icon"></span></a> <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample02" aria-controls="navbarsExample02" aria-expanded="false" aria-label="Toggle navigation"> <span class="navbar-toggler-icon"></span> </button>
        <a class="navbar-brand" href="~/Home">            
            <img src="~/Content/pormotec_logo.png" width="30" height="30" class="d-inline-block align-top" alt="" />
            Promotec
        </a>
        <div class="container">
            <div class="navbar-header">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Lista de Eventos", "Index", "Listar", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Crear un Evento", "Index", "Registrar", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">

                <ul class="nav navbar-nav mr-auto"></ul>
                <ul class="nav navbar-nav navbar-right ">
                    <li class="nav-item"><a href="/Registro" id="registerLink" class="nav-link">Registrarse</a></li>
                    <li class="nav-item"><a href="/Login" id="loginLink" class="nav-link">Salir</a></li>
                </ul>
            </div>
        </div>
    </div>
    

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="py-5 bg-dark">


            <div class="container">
                <p class="m-0 text-center text-white">Copyright &copy; @DateTime.Now.Year</p>
            </div>

        </footer>
    </div>
    

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>